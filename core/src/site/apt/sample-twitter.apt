                            .expectsJson()
                            .addGlobalRequestHeader("Accept-Encoding", "gzip") /* Not required */
                            .usePreauthentifiedOAuth(consumerKey, consumerSecret, accessToken, accessTokenSecret)
                            .build();

// get a service instance
